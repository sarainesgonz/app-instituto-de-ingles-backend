<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-8 offset-2">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id}}" name="id"> 
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Título" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Subtítulo" name="subtitulo" value="{{novedad.subtitulo}}"></input>
                </div>
                <div class="mb-3"> 
                    <p>
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"/></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"/>Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="mb-3">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>