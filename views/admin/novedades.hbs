{{!-- <h1>Administrador de novedades</h1> --}}
<div class="container" style="margin-top:50px">
    {{!--fila-1--}}
    <div class="row">
        <div class="col">
        <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger" href="/admin/login/logout"> Cerrar sesión <i
                    class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    {{!--fin-fila-1--}}

    {{!-- fila-2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> Nueva novedad </a>
        </div>
    </div>
    {{!-- fin-fila-2 --}}

    {{!-- fila-3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}    {{!imprime cada uno de los registros}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- fin-fila-3 s--}}

</div>